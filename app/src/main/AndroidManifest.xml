<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artur.project1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_desktop_doit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_desktop_doit"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        /* Загрузочный экрана */
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        /* Главное меню */
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowBackground="@drawable/background">

        </activity>

        /* LinearLayout */
        <activity
            android:name=".ActivityOne"
            android:label="@string/text_btn_LinearLayout"
            android:windowBackground="@drawable/background">
        </activity>

        /* RelativeLayout */
        <activity
            android:name=".ActivityTwo"
            android:label="@string/text_btn_RelativeLayout"
            android:windowBackground="@drawable/background">
        </activity>

        /* GridLayout */
        <activity
            android:name=".ActivityThree"
            android:label="@string/text_btn_GridLayout"
            android:windowBackground="@drawable/background">
        </activity>

    </application>

</manifest>